  sensitive           = true,
  identifierstyle     = \color{f-listing-identifier},
  showstringspaces    = false,
  escapeinside        = {/*@}{@*/}, % Allow LaTeX inside these special comments
  literate            =
    {á}{{\'a}}1 {é}{{\'e}}1 {í}{{\'i}}1 {ó}{{\'o}}1 {ú}{{\'u}}1
    {Á}{{\'A}}1 {É}{{\'E}}1 {Í}{{\'I}}1 {Ó}{{\'O}}1 {Ú}{{\'U}}1
