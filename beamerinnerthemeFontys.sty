% Set mode to presentation
\mode<presentation>
% Change the hypersetup

\usepackage{listings}

\hypersetup{
    colorlinks=true,
    linkcolor=slidetextcolor,
    filecolor=fontys,      
    urlcolor=fontyspink
}

% Use dots instead of default
\setbeamertemplate{itemize items}[circle]
\setbeamertemplate{itemize subitems}[circle]
\setbeamertemplate{itemize subitems}[circle]

% Add a left aligned description
\defbeamertemplate{description item}{align left}{\insertdescriptionitem\hfill}

% Number captions (e.g figure, table)
\setbeamertemplate{caption}[numbered]

% Listing style for Java
