% Required packages
\RequirePackage{xcolor}
\RequirePackage{beamerbasethemes}

% Beamer options
\DeclareOptionBeamer{lang}
{\PassOptionsToPackage{lang=#1}{beamerouterthemeFontys}}

\DeclareOptionBeamer{style}
{\PassOptionsToPackage{style=#1}{beamerouterthemeFontys}}

\ProcessOptionsBeamer

% Set the presentation mode
\mode<presentation>

% Specify which themes to use
\useinnertheme{default}
\useoutertheme{Fontys}
\usecolortheme{Fontys}
\usefonttheme{Fontys}

\setbeamersize{text margin left=\lefttitlemargin,text margin right=\lefttitlemargin}

% Change the hypersetup
\hypersetup{
    colorlinks=true,
    linkcolor=fontys,
    filecolor=fontys,      
    urlcolor=fontyspink
}
\setbeamertemplate{navigation symbols}{}
% Switch back to all mode
\mode<all>