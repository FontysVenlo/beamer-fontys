% Set mode to presentation
\mode<presentation>

% Colours taken from https://fontys.nl/Fontys-Huisstijl-Positionering-en-profilering-1/Visuele-identiteit.htm

% Main theme colour
\definecolor{fontys}{RGB}{102,51,102}
\definecolor{fontyspink}{RGB}{230,0,126}
\definecolor{fontysblue}{RGB}{0,118,224}
\definecolor{fontystitle}{named}{fontys}
\definecolor{slidebgcolor}{RGB}{255,255,255}
\definecolor{slidetextcolor}{RGB}{33,33,33}
\definecolor{f-secondary-blue}{HTML}{0099cb}
\definecolor{f-secondary-cyan}{HTML}{008387}
\definecolor{f-secondary-dark-green}{HTML}{339933}
\definecolor{f-secondary-green}{HTML}{3ab54a}
\definecolor{f-secondary-dark-orange}{HTML}{ed7425}
\definecolor{f-secondary-orange}{HTML}{ff9900}
\definecolor{f-secondary-yellow}{HTML}{ffcc00}
\definecolor{f-grey}{HTML}{878787}

% Listing colors
\definecolor{f-listing-comment}{named}{f-grey}
\definecolor{f-listing-string}{named}{f-secondary-dark-green}
\definecolor{f-listing-background}{named}{white}
\definecolor{f-listing-rule}{RGB}{191, 187, 186}
\definecolor{f-listing-numbers}{named}{f-grey}
\definecolor{f-listing-keyword}{named}{fontysblue}
\definecolor{f-listing-keyword-2}{named}{fontysblue}
\definecolor{f-listing-keyword-3}{named}{fontysblue}
\definecolor{f-listing-identifier}{named}{black}

\setbeamercolor{frametitle}{fg=fontystitle}
\setbeamercolor{normal text}{fg=slidetextcolor}
\setbeamercolor{itemize item}{fg=fontys}
\setbeamercolor{itemize subitem}{fg=fontys}
\setbeamercolor{itemize subsubitem}{fg=fontys}

\setbeamercolor{enumerate item}{fg=fontys}
\setbeamercolor{enumerate subitem}{fg=fontys}
\setbeamercolor{enumerate subsubitem}{fg=fontys}

\setbeamercolor{description item}{fg=fontys}
\setbeamercolor{description subitem}{fg=fontys}
\setbeamercolor{description subsubitem}{fg=fontys}

\setbeamercolor{caption name}{fg=fontys}

\setbeamercolor{section in toc}{fg=fontys}
\setbeamercolor{subsection in toc}{fg=fontys}