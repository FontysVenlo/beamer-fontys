% Set mode to presentation
\mode<presentation>

% Colours taken from https://fontys.nl/Fontys-Huisstijl-Positionering-en-profilering-1/Visuele-identiteit.htm

% Main theme colour
\definecolor{fontys}{RGB}{102,51,102}
\definecolor{fontyspink}{RGB}{230,0,126}
\definecolor{fontysblue}{RGB}{0,118,224}
\definecolor{fontystitle}{named}{fontys}
\definecolor{slidebgcolor}{RGB}{255,0,255}
\definecolor{slidetextcolor}{RGB}{33,33,33}
\definecolor{codekeyword}{rgb}{0.13,0.13,1}
\definecolor{codecomment}{rgb}{0,0.5,0}
\definecolor{codestring}{rgb}{0.9,0,0}


\setbeamercolor{frametitle}{fg=fontystitle}
\setbeamercolor{normal text}{fg=slidetextcolor}
\setbeamercolor{itemize item}{fg=fontys}
\setbeamercolor{itemize subitem}{fg=fontys}
\setbeamercolor{itemize subsubitem}{fg=fontys}

\setbeamercolor{enumerate item}{fg=fontys}
\setbeamercolor{enumerate subitem}{fg=fontys}
\setbeamercolor{enumerate subsubitem}{fg=fontys}

\setbeamercolor{description item}{fg=fontys}
\setbeamercolor{description subitem}{fg=fontys}
\setbeamercolor{description subsubitem}{fg=fontys}

\setbeamercolor{caption name}{fg=fontys}